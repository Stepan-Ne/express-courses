
    <h2>Courses</h2>

{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}" alt={{title}}>
          
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action list">
          <a href="/courses/{{id}}" target="_blank">Open</a>
          <a href="/courses/{{id}}/edit?allow=true">Edit</a>
          <form action="/card/add">
          <input type="hidden" name='id' value={{id}}>
          <button class='waves-effect waves-light btn-small' type="submit">Card</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>There aren`t courses!</p>
{{/if}}