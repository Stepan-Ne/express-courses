<h2>Card</h2>

<div id='card'>
{{# if courses.length}}

<table>
    <thead>
        <tr>
            <th>Name of Course</th>
            <th>Number of Courses</th>
            <th>Managment</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
       <tr>
           <td>{{title}}</td>
           <td>{{count}}</td>
           <td>
               <button class='btn-small js-remove' data-id='{{id}}'>DELETE</button>
           </td>
       </tr>
       {{/each}}
    </tbody>
</table>
<p><strong>Price: </strong> <span class='price'>{{price}}</span></p>
</div>

{{else}}
<p>The Card is empty</p>
{{/if}}
</div>